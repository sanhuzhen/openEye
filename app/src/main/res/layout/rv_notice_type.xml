<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_notice_type"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_notice_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方通知"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_notice_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开眼好友功能上线啦~在评论区看到志同道合的朋友，点个「关注」即可收到 TA 最新的评论和喜欢咯~！点击查看功能详情\u003E\u003E"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="80dp"
        android:textStyle="italic"
        android:textColor="@color/font_losecoupon"
        android:maxLines="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_transparent"
        android:layout_marginTop="70dp"/>

</FrameLayout>